{% extends 'backoffice/layout.html.twig' %}

{% block title %} Détails {% for trick in trickDetails %} {{ trick.name }} {% endfor %} {% endblock title %}

{% block stylesheet %}
    {{ parent() }}
{% endblock stylesheet %}

{% block content %}
    <div class="container-fluid px-4">
        <h4 class="mt-4"> Gestion des figures </h4>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
            <li class="breadcrumb-item active">
                détails {% for trick in trickDetails %} {{ trick.name }} {% endfor %}</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="me-1"></i>
                Détails {% for trick in trickDetails %} {{ trick.name }} {% endfor %}
            </div>
            <div class="card-body">
                {% for trick in trickDetails %}
                    <p><b>Nom</b> : {{ trick.name }}</p>
                    <p><b>Auteur</b> : {{ trick.user.lastName }} {{ trick.user.firstName }}</p>
                    <p><b>Groupe</b> : {{ trick.group.name }}</p>
                    <p><b>Description</b> : {{ trick.description }}</p>
                    <p><b>Date de création</b> : {{ trick.createdAt | date("d/m/Y \\à h:m:s") }}</p>
                    <p><b>Dernière modification</b> : {{ trick.updatedAt | date("d/m/Y \\à h:m:s") }}</p>
                    <p><b>Photos : </b></p>
                    <p><b>Vidéos : </b></p>


                    <div class="row">
                        <div class="images w-100 text-center">
                            <div id="carouselExampleControlsNoTouching" class="carousel carousel-dark slide"
                                 data-bs-touch="false" data-bs-interval="false">
