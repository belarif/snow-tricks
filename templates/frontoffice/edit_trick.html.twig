{% extends 'frontoffice/template.html.twig' %}

{% block title %} Modifier {% for trick in editTrick %} {{ trick.name }} {% endfor %} {% endblock title %}

{% block stylesheet %}
    {{ encore_entry_link_tags('frontoffice') }}
{% endblock stylesheet %}

{% block content %}
    <section class="min-vw-100 min-vh-100">
    {% for trick in editTrick %}
        {% for image in trick.images %}
            {% if loop.last %}
                <div class="btn-edit-trick">
                    <img src="{{ asset('build/images/'~image.src) }}" class="min-vw-100 min-vh-100 img-fluid"
                         alt="">
                    <div class="btn-overlay">
                        <!-- Trigger the modal with a button -->
                        <button type="button" class="custom-btn text-white" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                            Modifier {{ trick.name }}
                        </button>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        </section>
        <section class="text-center">
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="container-fluid">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-12">
                                    {% for image in trick.images %}
                                        {% if loop.last %}
                                            <div class="img-wrapper">
                                                <img src="{{ asset('build/images/'~image.src) }}"
                                                     class="w-100 img-fluid img-responsive" height="550" alt="">
                                                <div class="img-overlay">
                                                    <div class="btn-group m-3 me-3" role="group"
                                                         aria-label="Basic outlined example">
                                                        <button type="button" class="btn btn-light"><a href="#"><i
                                                                        class="bi bi-pencil-fill"></i></a>
                                                        </button>
                                                        <button type="button" class="btn btn-light"><a href="#"><i
                                                                        class="bi bi-trash-fill"></i></a>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div id="content-desktop" class="my-5">
                                        <div class="container">
                                            <div id="carouselExampleControls" class="carousel"
                                                 data-bs-ride="carousel">
                                                <div class="carousel-inner">
                                                    {% for image in trick.images %}
                                                        <div class="{% if loop.first %} carousel-item active {% else %} carousel-item {% endif %}">
                                                            <div class="card">
                                                                <div class="img-wrapper">
                                                                    <img src="{{ asset('build/images/'~image.src) }}"
                                                                         alt="">
                                                                    <!--<embed src="" allowfullscreen="true" class="w-100"height="220">
                                                                    -->
                                                                </div>
                                                            </div>
                                                            <div class="d-flex justify-content-end">
                                                                <div class="btn-group m-3 me-3" role="group"
                                                                     aria-label="Basic outlined example">
                                                                    <button type="button" class="btn btn-light"><a
                                                                                href="#"><i
                                                                                    class="bi bi-pencil-fill"></i></a>
                                                                    </button>
                                                                    <button type="button" class="btn btn-light"><a
                                                                                href="#"><i
                                                                                    class="bi bi-trash-fill"></i></a>
                                                                    </button>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                                <button class="carousel-control-prev" type="button"
                                                        data-bs-target="#carouselExampleControls"
                                                        data-bs-slide="prev">
                                                        <span class="carousel-control-prev-icon"
                                                              aria-hidden="true"></span>
                                                        <span class="visually-hidden">Previous</span>
                                                    </button>
                                                    <button class="carousel-control-next" type="button"
                                                            data-bs-target="#carouselExampleControls"
                                                            data-bs-slide="next">
                                                        <span class="carousel-control-next-icon"
                                                              aria-hidden="true"></span>
                                                        <span class="visually-hidden">Next</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="content-mobile" class=" my-3">
                                            <div class="w3-container">
                                                <button onclick="document.getElementById('id01').style.display='block'"
                                                        class="custom-btn">Voir les médias
                                                </button>
                                                <div id="id01" class="w3-modal">
                                                    <div class="w3-modal-content">
                                                        <div class="w3-container">
                                                            <span onclick="document.getElementById('id01').style.display='none'"
                                                                  class="w3-button w3-display-topright">&times;</span>
                                                            <div class="row my-2">
                                                                <h4>Photos : </h4>
                                                                {% for image in trick.images %}
                                                                    <div class="col-sm-12">
                                                                        <img class="w-100 h-100"
                                                                             src="{{ asset('build/images/'~image.src) }}"
                                                                             alt="">
                                                                    </div>
                                                                    <div class="offset-8 col-4 mb-2">
                                                                        <div class="btn-group" role="group"
                                                                             aria-label="Basic outlined example">
                                                                            <button type="button" class="btn btn-light">
                                                                                <a href="#"><i
                                                                                            class="bi bi-pencil-fill"></i></a>
                                                                            </button>
                                                                            <button type="button" class="btn btn-light">
                                                                                <a href="#"><i
                                                                                            class="bi bi-trash-fill"></i></a>
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                {% endfor %}
                                                            </div>
                                                            <div class="row mt-4">
                                                                <h4>Vidéos : </h4>
                                                                {% for video in trick.videos %}
                                                                    <div class="col-sm-12">
                                                                        <embed src="{{ video.src }}"
                                                                               allowfullscreen="true" class="w-100"
                                                                               height="220">
                                                                    </div>
                                                                    <div class="offset-8 col-4 mb-2">
                                                                        <div class="btn-group" role="group"
                                                                             aria-label="Basic outlined example">
                                                                            <button type="button" class="btn btn-light">
                                                                                <a href="#"><i
                                                                                            class="bi bi-pencil-fill"></i></a>
                                                                            </button>
                                                                                <button type="button" class="btn btn-light">
                                                                                    <a href="#"><i
                                                                                                class="bi bi-trash-fill"></i></a>
                                                                                </button>
                                                                            </div>
                                                                        </div>
                                                                {% endfor %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="offset-lg-2 col-lg-8 offset-lg-2 col-sm-12">
                                    {{ form_label(form.name, 'Nom :') }}
                                    {{ form_widget(form.name, { 'attr': {'value': trick.name } }) }}
                                    {{ form_label(form.description, 'Description :') }}
                                    {{ form_widget(form.description) }}
                                </div>
                                <div class="offset-lg-2 col-lg-8 offset-lg-2 col-sm-12">
                                    <div class="row d-flex justify-content-between">
                                        <div class="col-sm-12 col-md-6">
                                            {{ form_label(form.group, 'Groupe :') }}
                                            {{ form_widget(form.group) }}
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                            <div class="mt-3">
                                                <a class="btn btn-danger" href="#" role="button">supprimer</a>
                                                <button class="btn btn-primary" type="submit">envoyer</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
    </div>
    {% endfor %}
    </section>
{% endblock content %}

{% block javascript %}
{{ encore_entry_script_tags('frontoffice') }}
{% endblock javascript %}

