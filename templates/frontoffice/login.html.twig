{% extends 'frontoffice/template.html.twig' %}

{% block title %} Se connecter {% endblock title %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Se connecter</h3></div>
                    <div class="card-body">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form method="post" action="{{ path('user_login') }}">
                            <div class="form-floating mb-3">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="username" type="text" name="_username"
                                       value="{{ last_username }}" placeholder="Utilisateur"/>
                                <label for="username">Nom d'utilisateur</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="password" type="password" name="_password"
                                       placeholder="Password"/>
                                <label for="password">Mot de passe</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" href="#">Mot de passe oubli√© ?</a>
                                <button type="submit" class="btn btn-primary">Connexion</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}