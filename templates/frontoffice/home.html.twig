{% extends 'frontoffice/template.html.twig' %}

{% block stylesheet %}
    {{ encore_entry_link_tags('frontoffice') }}
{% endblock stylesheet %}

{% block content %}
    <header class="masthead bg-primary text-white" id="header">
        <div class="container d-flex align-items-center flex-column">
            <p class="masthead-subheading font-weight-light mb-0">Phrase d'accroche</p>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-end mx-5">
                    <a class="btn" href="#tricks">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                             class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1
                    0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <section class="page-section" id="tricks">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-5">
                {% for trick in listTricks %}
                    <div class="col mb-4">
                        <div class="card">
                            <img src="" class="card-img-top" alt="...">
                            <div class="card-body">
                                <a class="text-decoration-none" href="{{ path('home_page') }}"
                                   class="card-title">{{ trick.name }}</a>
                                <a href="#"><i class="bi bi-pencil-fill"></i></a>
                                <a href="#"><i class="bi bi-trash-fill"></i></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock content %}