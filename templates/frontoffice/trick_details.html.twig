{% extends 'frontoffice/template.html.twig' %}

{% block title %} Détails d'un trick {% for trick in trickDetails %} {{ trick.name }} {% endfor %} {% endblock title %}

{% block stylesheet %}
    {{ encore_entry_link_tags('frontoffice') }}
{% endblock stylesheet %}
{% block javascript %}
{{ encore_entry_script_tags('frontoffice') }}
{% endblock javascript %}

{% block content %}
    <section class="min-vw-100 min-vh-100">
        {% for trick in trickDetails %}
            {% for media in trick.medias %}
                {% if media.type.id == 1 %}
                    {% if loop.last %}
                        <div class="btn-trick-details">
                            <img src="{{ asset('build/images/'~media.src) }}" class="min-vw-100 min-vh-100 img-fluid"
                                 alt="">
                            <div class="btn-overlay">
                                <!-- Trigger the modal with a button -->
                                <button type="button" class="custom-btn text-white" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">
                                    Détails
                                </button>
                            </div>
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
            </section>
            <section class="text-center">
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        {% for media in trick.medias %}
                                            {% if media.type.id == 1 %}
                                                {% if loop.last %}
                                                    <div class="img-wrapper">
                                                        <img src="{{ asset('build/images/'~media.src) }}"
                                                             class="w-100 img-fluid img-responsive" height="550" alt="">
                                                        <div class="img-overlay">
                                                            <div class="btn-group m-3 me-3" role="group"
                                                                 aria-label="Basic outlined example">
                                                                <button type="button" class="btn btn-light"><a href="#"><i
                                                                                class="bi bi-pencil-fill"></i></a>
                                                                </button>
                                                                <button type="button" class="btn btn-light"><a href="#"><i
                                                                                class="bi bi-trash-fill"></i></a>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div id="content-desktop" class="my-5">
                                            <div class="container">
                                                <div id="carouselExampleControls" class="carousel"
                                                     data-bs-ride="carousel">
                                                    <div class="carousel-inner">
                                                        {% for media in trick.medias %}
                                                            <div class="{% if loop.first %} carousel-item active {% else %} carousel-item {% endif %}">
                                                                <div class="card">
                                                                    <div class="img-wrapper">
                                                                        {% if media.type.id == 1 %}
                                                                            <img src="{{ asset('build/images/'~media.src) }}"
                                                                                 alt="">
                                                                        {% else %}
                                                                            <iframe src="{{ media.src }}"
                                                                                    title="YouTube video player" allow="accelerometer;
                                                                        autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                                                    allowfullscreen>
                                                                            </iframe>
                                                                        {% endif %}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                    <button class="carousel-control-prev" type="button"
                                                            data-bs-target="#carouselExampleControls"
                                                            data-bs-slide="prev">
                                                        <span class="carousel-control-prev-icon"
                                                              aria-hidden="true"></span>
                                                        <span class="visually-hidden">Previous</span>
                                                    </button>
                                                    <button class="carousel-control-next" type="button"
                                                            data-bs-target="#carouselExampleControls"
                                                            data-bs-slide="next">
                                                        <span class="carousel-control-next-icon"
                                                              aria-hidden="true"></span>
                                                        <span class="visually-hidden">Next</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="content-mobile" class=" my-3">
                                            <!-- Trigger the modal with a button -->
                                            <button type="button" class="custom-btn text-white" data-bs-toggle="modal"
                                                    data-bs-target="#mediaModal">
                                                Voir les médias
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <p>{{ trick.description }}</p>
                                    </div>
                                    <div class="col-12">
                                        <p><b>Groupe : </b>{{ trick.group.name }}.
                                            <b class="ms-2">Date de cr&eacute;ation
                                                : </b>{{ trick.createdAt | date("m/d/Y h:m:s") }}.
                                            {% if trick.createdAt != trick.updatedAt %}
                                            <b class="ms-2">Date de modification
                                                : </b>{{ trick.updatedAt | date("m/d/Y h:m:s") }}.</p>
                                        {% endif %}
                                    </div>
                                    <div class="col-12">
                                        <hr>
                                        <form class="mb-4" method="post" action="">
                                            <textarea class="form-control" rows="3" placeholder="laisser un message"
                                                      name="content" required></textarea>
                                            <div class="d-flex justify-content-end mt-2">
                                                <input class="custom-btn" type="submit" value="Envoyer" name="submit">
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-12 mb-4">
                                        <div class="card message">
                                            <div class="card-body">
                                                <div class="d-flex mb-4">
                                                    <div class="flex-shrink-0">
                                                        <img class="rounded-circle" src="" alt=""/>
                                                    </div>
                                                    <div class="ms-3">
                                                        <div class="fw-bold">Nom et prénom du commentateur</div>
                                                        contenu du message
                                                    </div>
                                                </div>
                                                <div class="d-flex mb-4">
                                                    <div class="flex-shrink-0">
                                                        <img class="rounded-circle" src="" alt=""/>
                                                    </div>
                                                    <div class="ms-3">
                                                        <div class="fw-bold">Nom et prénom du commentateur</div>
                                                        contenu du message
                                                    </div>
                                                </div>
                                                <div class="d-flex mb-4">
                                                    <div class="flex-shrink-0">
                                                        <img class="rounded-circle" src="" alt=""/>
                                                    </div>
                                                    <div class="ms-3">
                                                        <div class="fw-bold">Nom et prénom du commentateur</div>
                                                        contenu du message
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center mt-4">
                                            <button class="custom-btn">
                                                <i class="fa faload-spinner fa-spin"></i>Charger plus
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock content %}
