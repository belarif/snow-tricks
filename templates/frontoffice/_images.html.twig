{% for image in trick.images %}
    <div class="{% if loop.first %} carousel-item active {% else %} carousel-item {% endif %}">
        <div class="card">
            <div class="img-wrapper">
                <img src="{{ asset('build/images/'~image.src) }}"
                     alt="">
            </div>
            <div class="d-flex justify-content-end">
                <div class="btn-group m-3 me-3" role="group"
                     aria-label="Basic outlined example">
                    <form class="editImageTrick" method="post"
                          action="{{ path('media_image_edit', {'id' : trick.id }) }}">
                        <div class="input-group">
                            <input type="file" name="src" value="{{ image.src }}" class="form-control" id="editImage"
                                   aria-describedby="editImage"
                                   aria-label="Upload">
                            <button class="btn btn-outline-secondary" type="submit" id="editImage">Envoyer</button>
                        </div>
                    </form>
                    <button type="button" class="btn btn-light"
                            id="show">
                        <i class="bi bi-pencil-fill"></i>
                    </button>
                    <button type="button" class="btn btn-light"><a
                                href="javascript:void(0)"
                                onclick="deleteImage({{ image.id }})">
                            <i class="bi bi-trash-fill"></i></a>
                    </button>
                </div>
            </div>

        </div>
    </div>
{% endfor %}