{% for video in trick.videos %}
    <div class="{% if loop.first %} carousel-item active {% else %} carousel-item {% endif %}">
        <div class="card">
            <div class="img-wrapper">
                <embed src="{{ video.src }}" allowfullscreen="true"
                       class="w-100 me-2" height="h-100">
            </div>
            <div class="card-body">
                <div class="btn-group mb-2" role="group" aria-label="Basic outlined example">
                    <div class="input-group">
                        <button type="button" class="btn btn-light"
                                id="showFormVideo"><i
                                    class="bi bi-pencil-fill"></i>
                        </button>
                        <button type="button" class="btn btn-light"><a
                                    href="javascript:void(0)"
                                    onclick="deleteVideo({{ video.id }})"><i
                                        class="bi bi-trash-fill"></i></a>
                        </button>
                    </div>
                </div>
                <div class="editVideoTrick">
                    <form method="post" action="{{ path('media_video_edit', {'id' : video.id }) }}">
                        <div class="input-group">
                            <input type="text" name="src" class="form-control form-control-sm" id="editVideo"
                                   aria-describedby="editVideo"
                                   aria-label="Upload" required>
                            <button class="btn btn-sm btn-outline-secondary" type="submit" id="editVideo">envoyer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
