{% extends 'frontoffice/template.html.twig' %}

{% block title %} Inscription {% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock stylesheets %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 registerForm">
                {% for message in app.flashes('existingUser') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                {% endfor %}
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header"><h3 class="text-center font-weight-light">Inscription</h3></div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-floating mb-3">
                            {{ form_row(form.username, {'label': 'Nom d\'utilisateur'}) }}
                        </div>
                        <div class="form-floating mb-3">
                            {{ form_row(form.email, {'label': 'Email'}) }}
                        </div>
                        <div class="form-floating mb-3">
                            {{ form_row(form.password, {'label': 'Mot de passe'}) }}
                        </div>
                        <div class="d-flex align-items-center justify-content-end mt-4 mb-0">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href="{{ path('app_login') }}">Vous avez déjà un compte ?
                                Connectez-vous</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}

{% block javascript %}
{{ parent() }}
{% endblock javascript %}
