<div id="content-mobile" class=" my-3">
    <div class="w3-container text-center">
        <button onclick="document.getElementById('id01').style.display='block'"
                class="custom-btn">Voir les médias
        </button>
        <div id="id01" class="w3-modal">
            <div class="w3-modal-content">
                <div class="w3-container">
                        <span onclick="document.getElementById('id01').style.display='none'"
                              class="w3-button w3-display-topright">&times;</span>
                    <div class="row my-2">
                        <h4>Photos : </h4>
                        {% for image in trick.images %}
                            <div class="col-sm-12">
                                <img class="w-100 h-100"
                                     src="{{ asset('uploads/images/'~image.src) }}"
                                     alt="">
                            </div>
                            <div class="offset-8 col-4 mb-2">
                                <div class="btn-group" role="group"
                                     aria-label="Basic outlined example">
                                    <button type="button" class="btn btn-light"
                                            id="showFormImage">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    <button type="button" class="btn btn-light"><a
                                                href="javascript:void(0)"
                                                onclick="deleteImage({{ image.id }})">
                                            <i class="bi bi-trash-fill"></i></a></button>
                                </div>
                                <div class="editImageTrick">
                                    {{ form_start(form_image, {'method': 'POST', 'action' : path('media_image_edit', {'id' : image.id }) }) }}
                                    {{ form_end(form_image) }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="row mt-4">
                        <h4>Vidéos : </h4>
                        {% for video in trick.videos %}
                            <div class="col-sm-12">
                                <embed src="{{ video.src }}"
                                       allowfullscreen="true" class="w-100"
                                       height="220">
                            </div>
                            <div class="offset-8 col-4 mb-2">
                                <div class="btn-group" role="group"
                                     aria-label="Basic outlined example">
                                    <button type="button" class="btn btn-light"
                                            id="showFormVideo"><i
                                                class="bi bi-pencil-fill"></i>
                                    </button>
                                    <button type="button" class="btn btn-light"><a
                                                href="javascript:void(0)"
                                                onclick="deleteVideo({{ video.id }})"><i
                                                    class="bi bi-trash-fill"></i></a>
                                    </button>
                                </div>
                                <div class="editVideoTrick">
                                    {{ form_start(form_video, {'method': 'POST', 'action' : path('media_video_edit', {'id' : video.id }) }) }}
                                    {{ form_end(form_video) }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
