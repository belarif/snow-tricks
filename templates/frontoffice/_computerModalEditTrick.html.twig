<div id="content-desktop" class="my-5">
    <div class="container">
        <div id="carouselExampleControls" class="carousel"
             data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for image in trick.images %}
                    <div class="{% if loop.first %} carousel-item active {% else %} carousel-item {% endif %}">
                        <div class="card">
                            <div class="img-wrapper">
                                <img src="{{ asset('build/images/'~image.src) }}"
                                     alt="">
                            </div>
                            <div class="card-body">
                                <div class="btn-group mb-2" role="group" aria-label="Basic outlined example">
                                    <button type="button" class="btn btn-light"
                                            id="showFormImage">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    <button type="button" class="btn btn-light"><a
                                                href="javascript:void(0)"
                                                onclick="deleteImage({{ image.id }})">
                                            <i class="bi bi-trash-fill"></i></a></button>
                                </div>
                                <div class="editImageTrick">
                                    {{ form_start(form_image, {'method': 'POST', 'action' : path('media_image_edit', {'id' : image.id }) }) }}
                                    {{ form_end(form_image) }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {% for video in trick.videos %}
                    <div class="{% if loop.first %} carousel-item active {% else %} carousel-item {% endif %}">
                        <div class="card">
                            <div class="img-wrapper">
                                <embed src="{{ video.src }}" allowfullscreen="true"
                                       class="w-100 me-2" height="h-100">
                            </div>
                            <div class="card-body">
                                <div class="btn-group mb-2" role="group" aria-label="Basic outlined example">
                                    <div class="input-group">
                                        <button type="button" class="btn btn-light"
                                                id="showFormVideo"><i
                                                    class="bi bi-pencil-fill"></i>
                                        </button>
                                        <button type="button" class="btn btn-light"><a
                                                    href="javascript:void(0)"
                                                    onclick="deleteVideo({{ video.id }})"><i
                                                        class="bi bi-trash-fill"></i></a>
                                        </button>
                                    </div>
                                </div>
                                <div class="editVideoTrick">
                                    {{ form_start(form_video, {'method': 'POST', 'action' : path('media_video_edit', {'id' : video.id }) }) }}
                                    {{ form_end(form_video) }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button"
                    data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                                                        <span class="carousel-control-prev-icon"
                                                              aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button"
                    data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                                                        <span class="carousel-control-next-icon"
                                                              aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>