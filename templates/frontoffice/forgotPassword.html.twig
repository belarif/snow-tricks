{% extends 'frontoffice/template.html.twig' %}

{% block title %} Mot de passe oublié {% endblock title %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Mot de passe oublié</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('app_forgot_password') }}">
                            <div class="form-floating mb-3">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="username" type="text" name="_username"
                                       placeholder="Utilisateur"/>
                                <label for="username">Nom d'utilisateur</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <button type="submit" class="btn btn-primary">Demande de réinitialisation</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}