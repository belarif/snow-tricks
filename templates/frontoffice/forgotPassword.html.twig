{% extends 'frontoffice/template.html.twig' %}

{% block title %} Mot de passe oublié {% endblock title %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                {% for message in app.flashes('existingUser') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                {% endfor %}
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Mot de passe oublié</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-floating mb-3">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <div class="form-floating mb-3">
                            {{ form_row(form.username, {'label': 'Nom d\'utilisateur'}) }}
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <button type="submit" class="btn btn-primary">Demande de réinitialisation</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}